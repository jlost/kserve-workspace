{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Teardown E2E",
            "type": "shell",
            "command": "${workspaceFolder}/test/scripts/openshift-ci/teardown-e2e-setup.sh",
            "args": ["${input:marker}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "trash"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "e2e teardown"
                }
            }
        },
        {
            "label": "Setup E2E",
            "type": "shell",
            "command": "${workspaceFolder}/test/scripts/openshift-ci/setup-e2e-tests.sh",
            "args": ["${input:marker}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "gear"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "e2e setup"
                }
            }
        },
        {
            "label": "Recreate E2E ns",
            "type": "shell",
            "command": "${workspaceFolder}/test/scripts/openshift-ci/setup-ci-namespace.sh",
            "args": ["${input:marker}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "refresh"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "e2e refresh"
                }
            },
            "isBackground": false
        },
        {
            "label": "Devspace Dev",
            "type": "shell",
            "command": "devspace",
            "args": ["dev", "--namespace", "${input:devspaceNamespace}", "--kube-context", "${input:devspaceKubecontext}"],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "devspace \\./app"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "coffee",
                "color": "terminal.ansiGreen"
            },
            "options": {
                "cwd": "${workspaceFolder}/.vscode",

                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "devspace dev"
                }
            }
        },
        {
            "label": "CRC Refresh",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/crc-refresh.sh",
            "args": [],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "^Ready!$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "close": false
            },
            "icon": {
                "id": "vm",
                "color": "terminal.ansiRed"
            },
            "options": {
                "cwd": "${workspaceFolder}/.vscode/scripts",
                "statusbar": {
                    "label": "crc refresh"
                }
            }
        },
        {
            "label": "Pull Secret",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/pull_secret.sh",
            "args": [],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "^--- Success ---$"
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "key",
                "color": "terminal.ansiYellow"
            },
            "options": {
                "cwd": "${workspaceFolder}/.vscode/scripts",
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "pull secret"
                }
            }
        },
        {
            "label": "Install ODH/RHOAI Operator",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/install-odh-operator.sh",
            "args": ["${input:operatorType}", "${input:operatorVersion}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "cloud-download",
                "color": "terminal.ansiBlue"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "install operator"
                }
            }
        },
        {
            "label": "Open OpenShift Console",
            "type": "shell",
            "command": "${BROWSER:-brave-browser} $(oc whoami --show-console)",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "globe",
                "color": "terminal.ansiRed"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "oc console"
                }
            }
        },
        {
            "label": "Fix ODH Dashboard Route (CRC)",
            "type": "shell",
            "command": "oc create route passthrough data-science-gateway --service=data-science-gateway-data-science-gateway-class --port=443 --hostname=data-science-gateway.apps-crc.testing -n openshift-ingress",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "close": false
            },
            "icon": {
                "id": "plug",
                "color": "terminal.ansiMagenta"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "fix odh route"
                }
            }
        },
        {
            "label": "Apply DSCI + DSC",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/apply-dsci-dsc.sh",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "server-process",
                "color": "terminal.ansiCyan"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}"
                },
                "statusbar": {
                    "label": "apply dsci+dsc"
                }
            }
        },
        {
            "label": "Create HF Token Secret + SA",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/scripts/create-hf-secret.sh",
            "args": ["${input:hfNamespace}"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": false
            },
            "icon": {
                "id": "key",
                "color": "terminal.ansiGreen"
            },
            "options": {
                "env": {
                    "KUBECONFIG": "${env:KUBECONFIG}",
                    "HF_TOKEN": "${env:HF_TOKEN}"
                },
                "statusbar": {
                    "label": "hf secret"
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "devspaceNamespace",
            "type": "promptString",
            "description": "Namespace for devspace dev",
            "default": "kserve"
        },
        {
            "id": "devspaceKubecontext",
            "type": "promptString",
            "description": "Kubecontext for devspace dev",
            "default": "crc-admin"
        },
        {
            "id": "marker",
            "type": "promptString",
            "description": "Pytest marker for E2E tests",
            "default": "kserve_on_openshift"
        },
        {
            "id": "operatorType",
            "type": "pickString",
            "description": "Select operator to install",
            "options": ["odh", "rhods"],
            "default": "odh"
        },
        {
            "id": "operatorVersion",
            "type": "promptString",
            "description": "Operator version (leave empty for default: ODH 3.2.0, RHOAI 3.0.0). Use 2.x for v2 channels.",
            "default": ""
        },
        {
            "id": "hfNamespace",
            "type": "promptString",
            "description": "Namespace for HuggingFace secret and service account (leave empty for current namespace)",
            "default": ""
        }
    ]
}
